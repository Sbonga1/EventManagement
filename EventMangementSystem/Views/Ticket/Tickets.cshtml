@model IEnumerable<EventMangementSystem.Models.Ticket>
@{
    ViewBag.Title = "Tickets";
}

<h2>Tickets</h2>

<table class="table">
    <tr>
        <th>Event Name</th>
        <th>Date</th>
        <th>Location</th>
        <th>Price</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Event.Name)</td>
            <td>@Html.DisplayFor(modelItem => item.Event.Date)</td>
            <td>@Html.DisplayFor(modelItem => item.Event.Location)</td>
            <td>@Html.DisplayFor(modelItem => item.TotalPrice)</td>
            <td>
                
                @Html.ActionLink("Details", "Details", new { id = item.TicketId }) |
                
            </td>
        </tr>
    }
</table>
