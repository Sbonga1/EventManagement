@model EventMangementSystem.Models.Inventory
@{
    ViewBag.Title = "Create";
}

<h2>New Inventory Item</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.ItemName)
        @Html.EditorFor(model => model.ItemName, new { htmlAttributes = new { @class = "form-control", @style = "width:35%" } })
        @Html.ValidationMessageFor(model => model.ItemName)
    </div>



    <div class="form-group">
        @Html.LabelFor(model => model.QuantityAvailable)
        @Html.EditorFor(model => model.QuantityAvailable, new { htmlAttributes = new { @class = "form-control", @style = "width:35%" } })
        @Html.ValidationMessageFor(model => model.QuantityAvailable)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Description)
        @Html.TextAreaFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", @style = "width:35%" } })
        @Html.ValidationMessageFor(model => model.Description)
    </div>
    <button type="submit" class="btn btn-primary">Create</button>

}
