@model EventMangementSystem.Models.EventReminder

<h2>Set Event Reminder</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.EventId)

    <div class="form-group">
        @Html.LabelFor(model => model.UserEmail)
        @Html.EditorFor(model => model.UserEmail, new { htmlAttributes = new { @class = "form-control" , @readonly = "readonly"} })
        @Html.ValidationMessageFor(model => model.UserEmail)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ReminderTime)
        @Html.EditorFor(model => model.ReminderTime, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.ReminderTime)
    </div>

    <button type="submit" class="btn btn-primary">Set Reminder</button>


}
