@model IEnumerable<EventMangementSystem.Models.Inventory>

<h2>Inventory List</h2>

<p>
    @Html.ActionLink("Create New Inventory Item", "Create", null, new { @class = "btn btn-primary" })
</p>

<table class="table">
    <tr>
        <th>Item Name</th>
        <th>Description</th>
        <th>Quantity Available</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.ItemName)</td>
            <td>@Html.DisplayFor(modelItem => item.Description)</td>
            <td>@Html.DisplayFor(modelItem => item.QuantityAvailable)</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.InventoryId }) |
                @Html.ActionLink("Details", "Details", new { id = item.InventoryId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.InventoryId })
            </td>
        </tr>
    }
</table>
