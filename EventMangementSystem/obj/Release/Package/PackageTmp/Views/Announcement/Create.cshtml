@model EventMangementSystem.Models.Announcement

<h2>Create Announcement</h2>

@using (Html.BeginForm("Create", "Announcement", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.EventId)

    <div class="form-group">
        @Html.LabelFor(model => model.Title)
        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Title)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Content)
        @Html.TextAreaFor(model => model.Content, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Content)
    </div>

    <button type="submit" class="btn btn-primary">Create Announcement</button>
}
@Html.ActionLink("Back to Event Details", "Details", "Event", new { id = Model.EventId }, new { @class = "btn btn-secondary" })
