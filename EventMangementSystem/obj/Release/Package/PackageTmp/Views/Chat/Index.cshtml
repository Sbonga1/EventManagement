@model EventMangementSystem.Models.ChatSession

@{
    ViewBag.Title = "Chat";
    int chatSessionId = ViewBag.ChatSessionId != null ? (int)ViewBag.ChatSessionId : 0;
    string userId = ViewBag.UserId != null ? (string)ViewBag.UserId : "";
}

<h2>Chat for Event: @Model.Event.Name</h2>

<div id="chat-container">
    <div id="chat-messages">
        @foreach (var message in Model.ChatMessages.OrderBy(m => m.Timestamp))
        {
            <div class="chat-message">
                <strong>@message.User.UserName:</strong> @message.Message <span class="timestamp">@message.Timestamp.ToString("HH:mm:ss")</span>
            </div>
        }
    </div>
</div>

<div id="chat-input">
    @using (Html.BeginForm("SendMessage", "Chat", FormMethod.Post, new { @id = "chat-form" }))
    {
        @Html.Hidden("chatSessionId", chatSessionId)
        @Html.Hidden("userId", userId)
        <input type="text" id="message" name="message" class="form-control" placeholder="Type your message here..." />
        <button type="submit" class="btn btn-primary">Send</button>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            function loadMessages() {
                $.getJSON('@Url.Action("GetMessages", "Chat", new { id = chatSessionId })', function (data) {
                    var chatMessages = $('#chat-messages');
                    chatMessages.empty();
                    $.each(data, function (i, message) {
                        chatMessages.append('<div class="chat-message"><strong>' + message.UserName + ':</strong> ' + message.Message + ' <span class="timestamp">' + message.Timestamp + '</span></div>');
                    });
                });
            }

            loadMessages();
            setInterval(loadMessages, 5000); // Refresh every 5 seconds

            $('#chat-form').submit(function (e) {
                e.preventDefault();
                $.post($(this).attr('action'), $(this).serialize(), function () {
                    $('#message').val('');
                    loadMessages();
                });
            });
        });
    </script>
}
