            <div class="agileits-logo">
                <h1><a href="@Url.Action("Index", "Home")"><span>Event</span>Planner</a></h1>
            </div>
            <nav class="navbar navbar-default">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="collapse navbar-collapse nav-wil" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li class="hvr-bounce-to-bottom button"><a href="@Url.Action("Index", "Home")">Home<span class="sr-only">(current)</span></a></li>
                        @if (Request.IsAuthenticated)
                        {

                            if (User.IsInRole("Admin"))
                            {
                                <li class="hvr-bounce-to-bottom button"><a href="@Url.Action("Index", "Venue")">Venues</a></li>
                                <li class="hvr-bounce-to-bottom button"><a href="@Url.Action("Index", "Inventory")">Inventories</a></li>
                                <li class="hvr-bounce-to-bottom button"><a href="@Url.Action("Create", "Users")">Team</a></li>
                            }
                            else if (User.IsInRole("EventManager"))
                            {
                                <li class="hvr-bounce-to-bottom button"><a href="@Url.Action("Index", "Event")">Events</a></li>
                                <li class="hvr-bounce-to-bottom button"><a href="@Url.Action("Index", "Donations")">Donations</a></li>
                                <li class="hvr-bounce-to-bottom button"><a href="@Url.Action("CreatePromotion", "Marketing")">Promotion</a></li>
                                <li class="hvr-bounce-to-bottom button"><a href="@Url.Action("Index", "CheckIn")">CheckIn</a></li>
                            }
                            else
                            {
                                <li class="hvr-bounce-to-bottom button"><a href="@Url.Action("Index", "Event")">Events</a></li>
                                <li class="hvr-bounce-to-bottom button"><a href="@Url.Action("Tickets", "Ticket")">Tickets</a></li>
                                <li class="hvr-bounce-to-bottom button"><a href="@Url.Action("Index", "Donations")">Donations</a></li>
                            }
                        }
                    </ul>
                    @if (Request.IsAuthenticated)
                    {
                        <div class="social-icons">
                            <ul>
                                @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <li><a style="width:70px" href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
                                }
                            </ul>
                        </div>
                    }
                    else
                    {
                        <div class="social-icons">
                            <ul>
                                <li style="width:100px" class="hvr-bounce-to-bottom button"><a href="@Url.Action("Register", "Account")">Register</a></li>
                                <li class="hvr-bounce-to-bottom button"><a href="@Url.Action("Login", "Account")">Login</a></li>
                            </ul>
                        </div>
                    }
                    <div class="clearfix"></div>
                </div>
            </nav>
        </div>
    </div>
    @if (ViewBag.Title != "Home Page")
    {
        <div id="about" class="about">
            <div class="container">
                @{
                    var successMessage = TempData["SuccessMessage"] as string;
                    var errorMessage = TempData["ErrorMessage"] as string;
                }

                @if (!string.IsNullOrEmpty(successMessage))
                {
                    <div class="alert alert-success" role="alert">
                        @successMessage
                    </div>
                }

                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert alert-danger" role="alert">
                        @errorMessage
                    </div>
                }

                <h3 class="w3ls-tittle">@ViewBag.Title</h3>
                @RenderBody()
            </div>
        </div>
    }
    else
    {
        @RenderBody()
    }

    <div class="footer">
        <div class="container">
            <div class="footer-left agileits-w3layouts">
                <p>&copy; 2024 Event Planner. All Rights Reserved </p>
            </div>
            <div class="footer-right">
                <ul>
                    <li><a href="#" class="f1"></a></li>
                    <li><a href="#" class="f2"></a></li>
                    <li><a href="#" class="f3"></a></li>
                    <li><a href="#" class="f4"></a></li>
                </ul>
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>

    <div id="chat-sidebar">
        <div class="chat-header">
            Chat <span id="chat-close">&times;</span>
        </div>
        <div class="event-list" id="event-list">
            <h2>Select an Event</h2>
            <ul id="event-list-items"></ul>
        </div>
        <div class="chat-messages" id="chat-messages"></div>
        <div class="chat-input">
            <input type="hidden" id="chatSessionId" />
            <input type="hidden" id="userId" />
            <input type="hidden" id="eventId" />
            <input type="text" id="message" class="form-control" placeholder="Type your message here..." />
            <button id="send-message" class="btn btn-primary">Send</button>
        </div>
    </div>
    <div id="chat-toggle">Chat</div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/2.4.2/jquery.signalR.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var chatToggle = document.getElementById('chat-toggle');
            var chatSidebar = document.getElementById('chat-sidebar');
            var chatClose = document.getElementById('chat-close');
            var sendMessage = document.getElementById('send-message');
            var messageInput = document.getElementById('message');
            var chatMessages = document.getElementById('chat-messages');
            var eventList = document.getElementById('event-list');
            var eventListItems = document.getElementById('event-list-items');
            var chatInput = document.querySelector('.chat-input');

            function formatTimestamp(timestamp) {
                var date = new Date(timestamp);
                return date.toLocaleString();
            }

            if (chatToggle) {
                chatToggle.style.display = 'block';
                chatToggle.addEventListener('click', function () {
                    console.log('Chat toggle clicked');
                    $.ajax({
                        url: '@Url.Action("GetEvents", "Chat")',
                        type: 'GET',
                        success: function (data) {
                            console.log('Events data:', data);
                            eventListItems.innerHTML = '';
                            data.forEach(function (event) {
                                var listItem = document.createElement('li');
                                listItem.textContent = event.Name;
                                listItem.dataset.eventId = event.EventId;
                                listItem.addEventListener('click', function () {
                                    loadChat(event.EventId);
                                });
                                eventListItems.appendChild(listItem);
                            });
                            chatSidebar.classList.add('open');
                            chatToggle.style.display = 'none';
                        },
                        error: function (xhr, status, error) {
                            console.error('Error fetching events:', error);
                            alert('Error: ' + xhr.responseText);
                        }
                    });
                });
            }

            if (chatClose) {
                chatClose.addEventListener('click', function () {
                    console.log('Chat close clicked');
                    chatSidebar.classList.remove('open');
                    chatToggle.style.display = 'block';
                    chatMessages.style.display = 'none';
                    chatInput.style.display = 'none';
                    eventList.style.display = 'block';
                });
            }

            function loadChat(eventId) {
                console.log('Event selected:', eventId);
                $.ajax({
                    url: '@Url.Action("Index", "Chat")',
                    type: 'GET',
                    data: { id: eventId },
                    success: function (data) {
                        console.log('Chat session data:', data);
                        $('#chatSessionId').val(data.ChatSessionId);
                        $('#userId').val(data.UserId);
                        $('#eventId').val(eventId);
                        chatMessages.style.display = 'block';
                        chatInput.style.display = 'block';
                        eventList.style.display = 'none';
                        chatSidebar.classList.add('open');
                        loadMessages(eventId);
                    },
                    error: function (xhr, status, error) {
                        console.error('Error fetching chat session:', error);
                        alert('Error: ' + xhr.responseText);
                    }
                });
            }

            if (sendMessage) {
                sendMessage.addEventListener('click', function () {
                    var message = messageInput.value;
                    var chatSessionId = document.getElementById('chatSessionId').value;
                    var userId = document.getElementById('userId').value;
                    if (!message) {
                        alert('Please enter a message');
                        return;
                    }
                    $.ajax({
                        url: '@Url.Action("SendMessage", "Chat")',
                        type: 'POST',
                        data: {
                            chatSessionId: chatSessionId,
                            userId: userId,
                            message: message
                        },
                        success: function (data) {
                            console.log('Message sent:', data);
                            messageInput.value = '';
                            loadMessages(chatSessionId);
                        },
                        error: function (xhr, status, error) {
                            console.error('Error sending message:', error);
                            alert('Error: ' + xhr.responseText);
                        }
                    });
                });
            }

            function loadMessages(eventId) {
                $.ajax({
                    url: '@Url.Action("GetMessagesForEvent", "Chat")',
                    type: 'GET',
                    data: { eventId: eventId },
                    success: function (data) {
                        chatMessages.innerHTML = '';
                        data.forEach(function (message) {
                            var messageElement = document.createElement('div');
                            messageElement.classList.add('chat-message');
                            messageElement.innerHTML = `<strong>${message.UserName}:</strong> ${message.Message} <span class="timestamp">${formatTimestamp(message.Timestamp)}</span>`;
                            chatMessages.appendChild(messageElement);
                        });
                        chatMessages.scrollTop = chatMessages.scrollHeight;
                    },
                    error: function (xhr, status, error) {
                        console.error('Error loading messages:', error);
                        alert('Error: ' + xhr.responseText);
                    }
                });
            }
        });
    </script>
    <script src="~/js/smoothscroll.min.js"></script>
    <script type="text/javascript" src="~/js/move-top.js"></script>
    <script type="text/javascript" src="~/js/easing.js"></script>
    <script src="~/js/bootstrap.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
